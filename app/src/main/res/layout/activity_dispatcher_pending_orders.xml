<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dispatcher_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t27.surreyfooddeliverycompany.DispatcherPendingOrdersActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="Pending Orders"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20dp"
        android:textStyle="bold" />


    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <!-- new orders button -->
            <RelativeLayout
                android:id="@+id/new_orders_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:onClick="newOrders">

                <ImageView
                    android:id="@+id/new_orders_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/order_button_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/new_orders_icon"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="New"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- pending order button -->
            <RelativeLayout
                android:id="@+id/pending_orders_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/pending_orders_icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/order_button_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/pending_orders_icon"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Pending"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Drivers button -->
            <RelativeLayout
                android:id="@+id/drivers_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:onClick="driversList">

                <ImageView
                    android:id="@+id/drivers"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/drivers_button_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/drivers"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Drivers"
                    android:textColor="@color/colorBodyText" />

            </RelativeLayout>


            <!-- Profile button -->
            <RelativeLayout
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:onClick="profile">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_button_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/profile"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/title"
        android:layout_marginBottom="15dp"
        android:background="@drawable/back"></RelativeLayout>

</RelativeLayout>
