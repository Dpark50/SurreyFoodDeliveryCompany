<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drivers_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t27.surreyfooddeliverycompany.DriversListActivity">

    <TextView
        android:text="Drivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <!-- Body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/footer"
        android:layout_marginBottom="15dp">

    </RelativeLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.0">

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/orders_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Orders">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/orders"
                    android:src="@drawable/order_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/orders"
                    android:text="Orders"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Drivers button -->
            <RelativeLayout
                android:id="@+id/drivers_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/drivers"
                    android:src="@drawable/drivers_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/drivers"
                    android:text="Drivers"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Settings button -->
            <RelativeLayout
                android:id="@+id/settings_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Settings">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/settings"
                    android:src="@drawable/settings_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/settings"
                    android:text="Settings"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Profile button -->
            <RelativeLayout
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Profile">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/profile"
                    android:src="@drawable/profile_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/profile"
                    android:text="Profile"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
