<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dispatcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t27.surreyfooddeliverycompany.DispatcherActivity">

    <TextView
        android:text="Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TabHost
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/current"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ListView
                        android:id="@+id/current_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.12">

                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pending"
                    android:layout_width="match_parent"
                    android:layout_height="382dp"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/pending_list"
                        android:layout_width="match_parent"
                        android:layout_height="382dp">

                    </ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <!--footer-->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.0">

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/orders_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/orders"
                    android:src="@drawable/orderButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/orders"
                    android:text="Orders"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/driver_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/drivers"
                    android:src="@drawable/orderButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/drivers"
                    android:text="Orders"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/settings_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/settings"
                    android:src="@drawable/orderButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/settings"
                    android:text="Settings"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/profile"
                    android:src="@drawable/orderButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/profile"
                    android:text="Profile"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
