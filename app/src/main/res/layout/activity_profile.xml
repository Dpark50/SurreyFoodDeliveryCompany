<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t27.surreyfooddeliverycompany.ProfileActivity">

    <TextView
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="35dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/driver"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="2134 Elmo St."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/address" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_marginTop="62dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Homer Simpson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/name"
        android:layout_below="@+id/driver"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="47000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Current Session: 07:21:31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/session"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sign Out"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/signOutButton"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/footer"
        android:layout_centerHorizontal="true"
        android:onClick="signOut"/>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.0">

            <!-- RelativeLayout as order button -->
            <RelativeLayout
                android:id="@+id/orders_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Orders">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/orders"
                    android:src="@drawable/order_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/orders"
                    android:text="Orders"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Drivers button -->
            <RelativeLayout
                android:id="@+id/drivers_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/drivers"
                    android:src="@drawable/drivers_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/drivers"
                    android:text="Drivers"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Settings button -->
            <RelativeLayout
                android:id="@+id/settings_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Settings">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/settings"
                    android:src="@drawable/settings_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/settings"
                    android:text="Settings"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>

            <!-- Profile button -->
            <RelativeLayout
                android:id="@+id/profile_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:onClick="Profile">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/profile"
                    android:src="@drawable/profile_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/profile"
                    android:text="Profile"
                    android:gravity="center"
                    android:textColor="@color/colorBodyText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
